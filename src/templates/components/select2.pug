extends ../partials/layout

//- Override default config variables
append config
    - var pageTitle = 'Select2'
    - var isNestedFile = true
    - var parentMenu = 'Components'
    - var breadcrumbs = [{'title': 'Home', 'link': 'index.html'}, {'title': 'Components', 'link': 'accordion.html'}, {'title': 'Select2'}]

//- Page Content
block content
    .container-fluid.padding-bottom-3x.mb-2
        .row
            //- Main content
            .col-lg-9.col-md-8.order-md-2
                h6.text-muted.text-normal.text-uppercase Select2 Components
                hr.margin-bottom-1x

                //- Basic Select2
                .form-group
                    label.form-label(style='padding-left:0' for='basic-select2') Basic Select2
                    select#basic-select2.form-control
                        option(value='Alaska') Alaska
                        option(value='Hawaii') Hawaii
                        option(value='Oregon') Oregon
                hr.margin-bottom-1x
                //- Basic option group
                .form-group
                    label.form-label(style='padding-left:0' for='optgroup-select2') Option Group Select2
                    select#optgroup-select2.form-control
                        optgroup(label="Alaskan/Hawaiian Time Zone")
                            option(value="alaska") Alaska
                            option(value="hawaii") Hawaii

                        optgroup(label="Pacific Time Zone")
                            option(value="california") California
                            option(value="nevada") Nevada
                            option(value="oregon") Oregon
                            option(value="washington") Washington
                    hr.margin-bottom-1x


                //- Multiselect Select2
                .form-group
                    label.form-label(style='padding-left:0' for='multiple-select2') Multiselect Select2
                    select#multiple-select2.form-control(multiple)
                        option(value='California') California
                        option(value='Nevada') Nevada
                        option(value='Oregon') Oregon
                        option(value='Washington') Washington
                hr.margin-bottom-1x

                //- Disabled Multi Select
                .form-group
                    label.form-label(style='padding-left:0' for="programmed-select2") Disabled Multi Select
                    select#programmed-select2.programmed-select2.form-control(multiple="multiple" disabled="disabled")
                        option(value="Alaska") Alaska
                        option(value="Hawaii") Hawaii
                        option(value="Oregon") Oregon

                .buttons
                    button.btn.btn-success.js-programmatic-enable(type="button") Enable Selects
                    button.btn.btn-danger.js-programmatic-disable(type="button" style="margin-left: 10px") Disable Selects

                hr.margin-bottom-1x

                //- Custom Template Select2
                .form-group
                    label.form-label(style='padding-left:0' for='custom-list-select2') Custom List Template
                    select#custom-list-select2.form-control.basic-select
                        option(value='html') HTML
                        option(value='css') CSS
                        option(value='js') JavaScript
                hr.margin-bottom-1x


                .select2-wrapper
                    label.form-label(for="mySelect2" style="padding-left:0") Select2 AJAX Example
                    select#mySelect2.js-data-example-ajax.form-control
                hr.margin-bottom-1x

            //- Sidebar
            .col-lg-3.col-md-4.order-md-1
                include ../partials/side-menu


